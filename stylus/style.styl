$black = rgb(30,30,30)
$dark-gray = rgb(40,40,40)
$white = rgb(230,230,230)
$pink = #ff69b4

*
    margin 0
    padding 0
    font-family 'Montserrat', monospace, sans-serif, serif
    -webkit-tap-highlight-color transparent
    scrollbar-width thin
    scrollbar-color $pink $black
    &::-webkit-scrollbar
        width 8px
        background-color: $dark;
    &::-webkit-scrollbar-thumb
        background  $pink

html
    height auto
    overflow-x hidden
    overflow-y auto
    background-color $dark-gray
    color white

html,body,#main,#__nuxt,#__layout
    height 100vh
    &>div
        height 100vh


#nav
    pointer-events none
    position fixed
    overflow hidden
    z-index 5
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 5vw
    height 100vh
    left 0
    bottom 0

    button
        pointer-events all
        width 5vw
        height 5vw
        background-color transparent
        border none
        background-image url(/images/stuff.svg)
        background-size 4vw
        background-position center center
        background-repeat no-repeat
        cursor pointer
        transition background-color 0.1s, border 0.1s
        float left
        margin-top 3px
        margin-bottom 3px
        pointer-events default
        border-left 1vh solid transparent
        border-right 1vh solid transparent

        &.active
            border-left 1vh solid $pink

        &.inactive:hover
            border-left 1vh solid alpha($white,0.5)

        &:nth-of-type(1)
            background-image url(/images/home.svg)
        &:nth-of-type(3)
            background-image url(/images/gallery.svg)
        &:nth-of-type(4)
            background-image url(/images/music.svg)


    @media (max-width:1000px)
        width auto
        button
            width 9vw
            height 9vw
            background-size 6vw

#main
    width 100%

.off
    display none


@media (max-aspect-ratio: 4/2) and (max-width: 900px) 
    #nav
        width 9vw
        button
            width 9vw
            height 9vw
            background-size 6vw

@media (max-aspect-ratio: 4/3) 
    #nav
        width 100%
        flex-direction row
        align-items flex-end
        button.nav-button
            float left
            width calc(10vw - 6px)
            height 10vw
            background-size 8vw
            border-left none 
            border-right none
            border-bottom 1vh solid transparent
            border-top 1vh solid transparent
            margin-top 0
            margin-bottom 0
            margin-left 3px
            margin-right 3px

            &.active
                border-bottom 1vh solid $pink

            &.inactive:hover
                border-bottom 1vh solid alpha($white,0.5)
                border-left none


@media (max-aspect-ratio: 1/1) 
    #nav
        button.nav-button
            width calc(15vw - 6px)
            height 15vw
            background-size 12vw

@media (max-aspect-ratio: 2/3) 
    #nav
        button.nav-button
            width calc(25vw - 6px)
            height 25vw
            background-size 14vw

@require 'home'

@require 'gallery'

@require 'stuff' 

@require 'music'  

