$black = rgb(30,30,30)
$dark-gray = rgb(40,40,40)
$white = rgb(230,230,230)
$pink = #ff69b4

*
    margin 0
    padding 0
    font-family Raleway

html
    height auto
    overflow-x hidden
    overflow-y auto
    background-color $dark-gray
    color white

html,body,#main,#__nuxt,#__layout
    height 100vh
    &>div
        height 100vh


#nav
    position absolute
    overflow hidden
    box-sizing border-box
    z-index 5
    display flex
    flex-direction column
    align-items center
    justify-content center
    width 5vw
    height calc(100% - 30vh)
    left 0
    bottom 15vh

    button
        width 5vw
        height 5vw
        background-color transparent
        border none
        background-image url(/images/stuff_icon.png)
        background-size 4vw
        background-position center center
        background-repeat no-repeat
        cursor pointer
        transition background-color 0.1s, border 0.1s
        float left
        margin-top 3px
        margin-bottom 3px
        pointer-events default
        border-left 1vh solid transparent
        border-right 1vh solid transparent

        &.active
            border-left 1vh solid $pink

        &.inactive:hover
            border-left 1vh solid alpha($white,0.5)

        &:nth-of-type(2)
            background-image url(/images/gallery_icon.png)
        &:nth-of-type(3)
            background-image url(/images/music_icon.png)
        &:nth-of-type(4)
            background-image url(/images/social_icon.png)

#main
    width 100%

.off
    display none


@media (max-aspect-ratio: 4/2) and (max-width: 900px) 
    #nav
        width 9vw
        height calc(100% - 30vh)
        bottom 15vh
        button
            width 9vw
            height 9vw
            background-size 6vw

@media (max-aspect-ratio: 4/3) 
    #nav
        width 100%
        height 10vw
        flex-direction row
        bottom 0
        button.nav-button
            width 10vw
            height 10vw
            background-size 8vw
            border-left none 
            border-right none
            border-bottom 1vh solid transparent
            border-top 1vh solid transparent
            margin-top 0
            margin-bottom 0
            margin-left 3px
            margin-right 3px

            &.active
                border-bottom 1vh solid $pink

            &.inactive:hover
                border-bottom 1vh solid alpha($white,0.5)
                border-left none


@media (max-aspect-ratio: 1/1) 
    #nav
        height 15vw
        button.nav-button
            width 15vw
            height 15vw
            background-size 12vw

@media (max-aspect-ratio: 2/3) 
    #nav
        height 25vw
        button.nav-button
            width 25vw
            height 25vw
            background-size 14vw

