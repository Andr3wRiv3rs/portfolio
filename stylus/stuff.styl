#stuff
    overflow-x hidden
    overflow-y hidden
    height 100vh
    width 100vw
    
#stuff-inner
    max-height 100vh
    overflow-x hidden
    overflow-y hidden
    margin-left 0
    transition margin-left 1s
    box-sizing border-box

    .project
        float left
        display inline-block
        height 100vh
        width 100vw
        box-sizing border-box
        background-size cover
        background-position center center
        max-width 100vw

        .title
            margin-bottom 10px
            font-weight 200
            letter-spacing 1px
            font-size 2rem
            text-align center

            @media (max-aspect-ratio: 4/3) 
                font-size 4vh

        .desc
            max-width 70vw
            text-align center
            font-size 1.2rem

            @media (max-aspect-ratio: 4/3) 
                font-size 2.5vh
                max-width 90vw

        .info
            width 100vw
            height 100vh
            color $white
            padding 20px
            box-sizing border-box
            position relative
            display flex
            flex-direction column
            align-items center
            justify-content center
            flex-wrap wrap
            max-width 100vw
            z-index 2
            box-sizing border-box

            @media (max-aspect-ratio: 4/3)
                padding-bottom 10vw

            @media (max-aspect-ratio: 1/1) 
                padding-bottom 15vw

            @media (max-aspect-ratio: 2/3) 
                padding-bottom 25vw

            background-color alpha($black,0.7)

        .handles
            margin-top 10px
            display flex
            flex-direction row
            flex-wrap wrap
            align-items center
            justify-content center
            width 100%

        a
            margin 5px
            font-size 1rem
            float left
            border-bottom 1px solid transparent

        .links
            margin-top 5px
            height 0
            a
                background-size cover
                background-position center center
                width 3vmax
                display inline-block
                height 3vmax
                border none !important

            @media (max-aspect-ratio: 3/2)
                a
                    width 7vw
                    height 7vw



            @media (max-aspect-ratio: 1/1) 
                a
                    width 10vw
                    height 10vw

            @media (max-aspect-ratio: 2/3)
                a
                    width 15vw
                    height 15vw

    #bubbles,#mobile-bubbles
        position fixed
        width 100vw
        height 1.1vmax
        left 0
        bottom 20px
        display flex
        flex-direction row
        align-items center
        justify-content center
        z-index 2
        max-width 100vw
        &>span
            cursor pointer
            width 1.1vmax
            height 1.1vmax
            border 1px solid $white
            border-radius 100vw
            margin 3px
            &.active
                background-color $white

    #bubbles
        @media (max-width:1000px)
            &>span
                width 2.5vw
                height 2.5vw

        @media (max-aspect-ratio: 4/3)
            bottom calc(10vw + 20px)

        @media (max-aspect-ratio: 1/1) 
            bottom calc(15vw + 20px)
            &>span
                width 4vw
                height 4vw

        @media (max-aspect-ratio: 2/3) 
            display none

    #mobile-bubbles
        display none
        height auto

        @media (max-aspect-ratio: 2/3) 
            display flex
            bottom calc(25vw + 20px)
            