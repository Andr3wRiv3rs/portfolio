#stuff
    max-height 100vh
    overflow-x hidden
    overflow-y hidden
    margin-left 0
    transition margin-left 1s
    box-sizing border-box

    .project
        float left
        display inline-block
        height 100vh
        width 100vw
        box-sizing border-box
        background-size cover
        background-position center center
        max-width 100vw

        .title
            margin-bottom 10px
            font-weight 200
            letter-spacing 1px
            font-size 2rem

        .desc
            max-width 70vw
            text-align center
            font-size 1.2rem

        .info
            width 100vw
            height 100vh
            color $white
            padding 20px
            box-sizing border-box
            position relative
            display flex
            flex-direction column
            align-items center
            justify-content center
            flex-wrap wrap
            max-width 100vw
            z-index 2
            background-color alpha($black,0.7)

        .handles
            margin-top 10px

        a
            margin 5px
            font-size 1rem

    #bubbles
        position fixed
        width 100vw
        height 1vmax
        left 0
        bottom 20px
        display flex
        flex-direction row
        align-items center
        justify-content center
        z-index 2
        max-width 100vw

        &>span
            cursor pointer
            min-width 1.1vmax
            height 1.1vmax
            border 1px solid $white
            border-radius 2vmax
            margin 3px
            
            &.active
                background-color $white