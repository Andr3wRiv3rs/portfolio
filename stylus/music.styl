#music
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    opacity 1
    pointer-events default
    display flex
    flex-direction row
    align-items center

    @media (max-aspect-ratio: 4/3)
        display block

button 
    outline none
    border 2px solid $white 
    background-color alpha($white,0.2)
    padding 10px
    margin 0
    display block
    float left
    cursor pointer
    
.play-button
    background none 
    border none 
    transition background 0.1s, color 0.1s
    font-family sans-serif
    background-size cover

#nowplaying
    color $white
    width 50vw
    height 100vh
    display flex
    flex-direction column
    background-color transparent
    align-items center
    justify-content center
    background-color alpha($dark-gray,0.5)

    .bg
        position absolute
        background-size cover
        background-position center center
        filter brightness(70%)
        width 50vw
        height 100vh
        overflow hidden
        z-index -1
        @media (max-aspect-ratio: 4/3)
            display none
        img 
            width 60vw
            height 110vh
            margin-left -5vw
            margin-top -5vh
            filter blur(50px) contrast(90%)

    *:not(a)
        color white
    
    .cover
        height 20vw
        width 20vw
        background-size cover
        border-radius 5px

    h2
        font-weight 200
        letter-spacing 1px
        display block
        text-align center
        margin-bottom 10px
        font-size 30px
        width 40vw

    .np-inner-wrapper
        max-width 35vw

    #np-bar-wrapper
        width 20vw
        display block
        height 2vh
        margin-top 10px
        #np-bar-bg
            background $black

        .load-bar
            float left
            height 3vh

        #np-bar
            background $pink
            pointer-events none
            margin-top -1vh
            height 1vh
            border-radius 1vh

        #np-bar-bg
            width 100%
            height 1vh
            border-radius 1vh

        #np-bar
            width 0%

        #np-bar-pad
            margin-top -2.1vh
            width 100%

        @media (max-aspect-ratio: 4/3) 
            width 100%
            margin 0

            #np-bar
                border-radius 0
                height 2vh
                margin-top -2vh
            
            #np-bar-bg
                border-radius 0
                height 2vh

            #np-bar-pad
                height 4vh
                margin-top -2vh
    
    #controls
        opacity 0.8

    button
        border none 
        background-color transparent
        height 50px
        width 50px
        font-size 20px
        display flex
        align-items center
        justify-content center
        font-family monospace,serif
        border-radius 999px
        cursor default
        margin 5px

        &:hover
            background-color alpha(white,0.3)

        &.play
            border 1px solid white
            font-family Montserrat
            text-align center

        &.disabled
            opacity 0.3
            pointer-events none

    @media (max-aspect-ratio: 4/3) 
        position fixed
        height auto
        width 100%
        bottom 0
        z-index 1
        padding-bottom 10vw
        background-color $black

        #controls
            height 50px
            display flex
            flex-direction row
            align-items center
            justify-content center
            margin-top 10px

        .cover
            display none

        h2
            float left
            margin 0
            position fixed
            top 0
            padding 10px
            height 40px
            font-size 20px
            display flex
            justify-content center
            align-items center
            background-color $black
            width 100%

    @media (max-aspect-ratio: 1/1) 
        padding-bottom 15vw

    @media (max-aspect-ratio: 2/3) 
        padding-bottom 25vw

a
    color $pink
    text-decoration none
    cursor pointer

    &:hover
        color $white
        border-bottom 1px solid $white

#playlist
    width 50vw
    overflow-y auto
    overflow-x hidden
    height 100%
    right 0

    @media (max-aspect-ratio: 4/3) 
        width 100%
        overflow-y visible
        height auto
        padding-top 60px
        padding-bottom calc(10vw + 60px)

    @media (max-aspect-ratio: 1/1) 
        padding-bottom calc(15vw + 60px)

    @media (max-aspect-ratio: 2/3) 
        padding-bottom calc(25vw + 60px)

.track
    width calc(100%/3)
    float left
    box-sizing border-box
    cursor pointer
    transition opacity 0.05s
    opacity 0.8

    @media (max-aspect-ratio: 2/3) 
        width calc(100%/2)
    
    &:hover
        opacity 1

.track-inner
    height 0
    overflow hidden
    padding-top 100%
    position relative
    
    button
        position absolute
        top 0
        left 0
        background-size cover
        text-shadow 0px 0px 32px black
        background-position center center
        pointer-events none
        color $white
        width 100%
        height 100%
        font-size 3vmax
        font-family serif

        @media (max-aspect-ratio: 4/3) 
            font-size 6vmax